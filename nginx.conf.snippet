server {
    listen 80;
    listen [::]:80;
    server_name www.emrs.ae;
    return 301 https://emrs.ae$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.emrs.ae;
    
    # SSL config should go here (managed by Certbot usually)
    
    return 301 https://emrs.ae$request_uri;
}

server {
    listen 80;
    listen [::]:80;
    server_name emrs.ae;
    
    # Redirect HTTP to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name emrs.ae;

    root /var/www/emrs/dist;
    index index.html;

    # SPA Routing
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Security Headers
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://embed.trustmary.io https://widget.trustmary.com https://d3qhsf9lmfcusu.cloudfront.net https://www.googletagmanager.com https://googleads.g.doubleclick.net https://www.googleadservices.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https:; frame-src 'self' https://*.trustmary.io https://*.trustmary.com https://www.googletagmanager.com https://www.google.com https://td.doubleclick.net; connect-src 'self' https://www.googletagmanager.com https://*.google-analytics.com https://*.analytics.google.com https://*.trustmary.io https://*.trustmary.com https://www.google.com https://www.google.ae https://www.google.nl https://googleads.g.doubleclick.net; object-src 'none'; upgrade-insecure-requests;" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header Cross-Origin-Opener-Policy "same-origin" always;

    # Caching Headers for Static Assets
    location ~* \.(?:ico|css|js|gif|jpe?g|png|webp|svg|woff2?|eot|ttf|otf)$ {
        expires 6M;
        access_log off;
        add_header Cache-Control "public, no-transform";
    }

    # Sitemap and Robots
    location ~* \.(xml|txt)$ {
        expires 1h;
    }
}
